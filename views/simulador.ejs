<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Simulador de Crédito | Grupo Activa</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body { background: #f8f9fa; font-family: 'Roboto', sans-serif; }
    .sim-main-row {
      display: flex;
      gap: 2.5rem;
      align-items: flex-start;
      justify-content: center;
      max-width: 1200px;
      margin: 2.5rem auto 2rem auto;
      flex-wrap: wrap;
    }
    .sim-card {
      flex: 1 1 420px;
      max-width: 700px;
      background: #fff;
      border-radius: 22px;
      box-shadow: 0 4px 18px rgba(13,55,241,0.06);
      padding: 2.3rem 2rem 2rem 2rem;
      position: relative;
      overflow: visible;
      margin-bottom: 2rem;
    }
    .sim-icon-main {
      position: absolute;
      top: -36px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(135deg, #0d37f1, #2deede 80%);
      color: #fff;
      width: 68px;
      height: 68px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2.3rem;
      box-shadow: 0 2px 14px rgba(13,55,241,0.18);
      border: 6px solid #f8f9fa;
      z-index: 2;
    }
    .sim-title {
      margin-top: 1.6rem;
      color: #0d37f1;
      font-family: 'Montserrat', sans-serif;
      font-size: 2.2rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 1.2rem;
    }
    .sim-label { font-weight: 500; color: #0d37f1; }
    .sim-summary-cards {
      display: flex;
      flex-direction: column;
      gap: 1.1rem;
      margin: 1.5rem 0 1.1rem 0;
    }
    .sim-summary-card {
      background: #f5f9ff;
      color: #0d37f1;
      border-radius: 10px;
      padding: 1rem 1.1rem;
      min-width: unset;
      text-align: center;
      font-size: 1.07rem;
      font-weight: 500;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: .6rem;
      border: 1px solid #e0eaff;
      transition: box-shadow .2s, transform .2s;
      box-shadow: 0 1px 4px rgba(13,55,241,0.03);
    }
    .sim-summary-card i {
      font-size: 1.25rem;
      opacity: .85;
      color: #090dd8;
      background: none;
      -webkit-background-clip: unset;
      -webkit-text-fill-color: unset;
    }
    .table thead th {
      background: linear-gradient(90deg,#0d37f1 50%, #2deede 100%);
      color: #fff;
      border: none;
    }
    .table tbody td { background: #f5f9ff; }

    /* Sidebar */
    .sidebar-info {
      flex: 0 1 340px;
      max-width: 340px;
      background: #fff;
      border-radius: 22px;
      box-shadow: 0 4px 18px rgba(13,55,241,0.06);
      padding: 2.2rem 1.2rem 1.6rem 1.2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 2rem;
    }
    .sidebar-info h3 {
      font-size: 1.3rem;
      color: #0d37f1;
      font-weight: 700;
      margin-bottom: 1.1rem;
      text-align: center;
      font-family: 'Montserrat', sans-serif;
    }
    .sidebar-info ul {
      padding-left: 1.2rem;
      margin-bottom: 1.1rem;
      color: #184a90;
      font-size: 1.02rem;
    }
    .sidebar-info li {
      margin-bottom: .5rem;
      line-height: 1.35;
    }
    .sidebar-image {
      width: 94%;
      border-radius: 12px;
      box-shadow: 0 2px 16px rgba(0,0,0,0.05);
      margin: 1.1rem 0 1.1rem 0;
    }
    .sidebar-btns {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
      justify-content: center;
      margin-top: .7rem;
    }
    .sidebar-btns a {
      flex: 1 1 50px;
      text-decoration: none;
      font-weight: 500;
      font-size: 1.07rem;
      border-radius: 30px;
      border: none;
      padding: .65em 0.8em;
      display: flex;
      align-items: center;
      gap: .5em;
      transition: background .15s;
      justify-content: center;
    }
    .btn-primary {
      background: #0d37f1;
      color: #fff;
      border: none;
    }
    .btn-primary:hover {
      background: #184a90;
      color: #fff;
    }
    @media (max-width: 1000px) {
      .sim-main-row { flex-direction: column; align-items: stretch; }
      .sidebar-info { max-width: 100%; }
      .sim-card { max-width: 100%; }
    }
    @media (max-width: 600px) {
      .sim-card, .sidebar-info { padding: 1rem; }
    }

    .btn-contacto-grad {
        background: linear-gradient(90deg, #0d37f1 0%, #2d4af3 100%);
        color: #fff;
        border: none;
        border-radius: 30px;
        font-weight: 500;
        font-size: 1.07rem;
        padding: .45em 1.3em;
        display: flex;
        align-items: center;
        gap: .5em;
        justify-content: center;
        box-shadow: 0 1px 6px rgba(13,55,241,0.05);
        transition: background .18s, filter .15s;
        min-width: 140px;
        width: auto;
    }
    .btn-contacto-grad:hover {
        filter: brightness(1.1);
        color: #fff;
        background: linear-gradient(90deg, #2deede 0%, #0d37f1 100%);
        text-decoration: none;
    }



  </style>
</head>
<body>

  <%- include('partials/header', { pageBanner: false }) %>

  <main>
    <div class="sim-main-row">
      <!-- Simulador -->
      <div class="sim-card">
        <span class="sim-icon-main"><i class="bi bi-calculator"></i></span>
        <div class="sim-title">Simulador de Crédito</div>
        <form id="simForm" class="row g-3 mb-3 mt-2">
          <div class="col-12 col-md-6">
            <label class="sim-label mb-1"><i class="bi bi-currency-dollar"></i> Monto solicitado</label>
            <input type="number" class="form-control" id="monto" min="100" max="5000" required placeholder="Ej: 500" />
          </div>
          <div class="col-12 col-md-6">
            <label class="sim-label mb-1"><i class="bi bi-clock-history"></i> Modalidad de pago</label>
            <select class="form-select" id="modalidad" required>
              <option value="diario">Pago Diario</option>
              <option value="semanal">Pago Semanal</option>
            </select>
          </div>
          <div class="col-12 text-center mt-2">
            <button type="submit" class="btn btn-primary px-4" style="font-size:1.15rem;">
              <i class="bi bi-lightning-charge-fill"></i> Ver Cronograma 
            </button>
          </div>
        </form>

        <div id="simResultados" style="display:none;">
          <div class="sim-summary-cards">
            <div class="sim-summary-card">
              <i class="bi bi-wallet2"></i>
              Monto: <strong id="resMonto"></strong>
            </div>
            <div class="sim-summary-card">
              <i class="bi bi-list-ol"></i>
              Cuotas: <strong id="resCuotas"></strong>
            </div>
            <div class="sim-summary-card">
              <i class="bi bi-cash-coin"></i>
              Cuota: <strong id="resCuota"></strong>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered align-middle">
              <thead>
                <tr>
                  <th>N°</th>
                  <th>Fecha de Pago</th>
                  <th>Monto a Pagar</th>
                </tr>
              </thead>
              <tbody id="tablaPagos"></tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Sidebar info -->
      <aside class="sidebar-info">
        <h3>¿Cómo funciona tu préstamo?</h3>
        <ul>
          <li><i class="bi bi-1-circle"></i> Elige el monto y modalidad de pago.</li>
          <li><i class="bi bi-2-circle"></i> Visualiza cuotas y cronograma.</li>
          <li><i class="bi bi-3-circle"></i> Solicita tu préstamo y recibe atención personalizada.</li>
        </ul>
        <!-- Cambia la ruta de la imagen si deseas -->
        <img src="/assets/prestamo_asesor.jpg" alt="Cliente con asesor financiero" class="sidebar-image">
        <div class="sidebar-btns">
          <div style="text-align:center; font-size:1.07rem; color:#184a90;">
            <i class="bi bi-telephone" style="color:#0d37f1;font-size:1.2rem;"></i>
            <strong>Llámanos:</strong> <br> <span style="font-weight:600; color:#0d37f1;">+51 987 654 321</span>
          </div>
          <a href="/contacto" class="btn btn-contacto-grad">
            <i class="bi bi-arrow-right-square-fill icon-pulse"></i> Solicita tu Préstamo
          </a>
        </div>
      </aside>
    </div>
  </main>

  <%- include('partials/footer') %>

  <script>
    // Configuración: puedes cambiar los porcentajes aquí
    const PORCENTAJE_DIARIO = 0.20;   // 20% ganancia sobre el monto base
    const PORCENTAJE_SEMANAL = 0.25;  // 25% ganancia sobre el monto base
    const CUOTAS_DIARIO = 26;
    const CUOTAS_SEMANAL = 4;

    // Devuelve la siguiente fecha, saltando domingos si modo diario
    function siguienteFecha(fecha, modalidad) {
      let next = new Date(fecha);
      if (modalidad === 'diario') {
        do {
          next.setDate(next.getDate() + 1);
        } while (next.getDay() === 0); // 0 = domingo
      } else {
        next.setDate(next.getDate() + 7);
      }
      return next;
    }

    document.getElementById('simForm').addEventListener('submit', function(e){
      e.preventDefault();

      const monto = parseFloat(document.getElementById('monto').value);
      const modalidad = document.getElementById('modalidad').value;
      let porcentaje = modalidad === 'diario' ? PORCENTAJE_DIARIO : PORCENTAJE_SEMANAL;
      let cuotas = modalidad === 'diario' ? CUOTAS_DIARIO : CUOTAS_SEMANAL;

      // Validación
      if(isNaN(monto) || monto < 100){
        alert('Ingresa un monto válido (mínimo S/ 100)');
        return;
      }

      // Cálculo del total a pagar
      const totalPagar = Math.round((monto * (1 + porcentaje)) * 100) / 100;
      const montoCuota = Math.round((totalPagar / cuotas) * 100) / 100;

      // Fecha inicial: hoy + 1 día para diario, hoy + 7 días para semanal
      let fechaHoy = new Date();
      let fechaPago = new Date(fechaHoy);
      if (modalidad === 'diario') {
        fechaPago = siguienteFecha(fechaPago, 'diario');
      } else {
        fechaPago.setDate(fechaPago.getDate() + 7);
      }

      // Resumen visual
      document.getElementById('resMonto').textContent = "S/ " + monto.toFixed(2);
      document.getElementById('resCuotas').textContent = cuotas;
      document.getElementById('resCuota').textContent = "S/ " + montoCuota.toFixed(2);

      // Generar cronograma
      let tabla = '';
      let numPago = 1;
      let pagosRestantes = cuotas;
      let fecha = new Date(fechaPago);

      while(pagosRestantes > 0){
        let fechaTexto = fecha.toLocaleDateString('es-PE', { weekday:'short', year:'numeric', month:'short', day:'numeric' });
        tabla += `<tr>
          <td>${numPago}</td>
          <td>${fechaTexto}</td>
          <td>S/ ${montoCuota.toFixed(2)}</td>
        </tr>`;
        // Siguiente fecha
        fecha = siguienteFecha(fecha, modalidad);
        pagosRestantes--;
        numPago++;
      }
      document.getElementById('tablaPagos').innerHTML = tabla;
      document.getElementById('simResultados').style.display = 'block';
    });
  </script>
</body>
</html>
